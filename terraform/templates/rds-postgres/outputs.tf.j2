output "db_instance_id" {
  description = "RDS instance ID"
  value       = module.{{ service_name | replace('-', '_') }}_rds.id
}

output "db_endpoint" {
  description = "RDS instance endpoint"
  value       = module.{{ service_name | replace('-', '_') }}_rds.endpoint
}

output "db_address" {
  description = "RDS instance address"
  value       = module.{{ service_name | replace('-', '_') }}_rds.address
}

output "db_port" {
  description = "RDS instance port"
  value       = module.{{ service_name | replace('-', '_') }}_rds.port
}

output "db_name" {
  description = "Database name"
  value       = local.db_name
}

output "db_username" {
  description = "Database username"
  value       = local.db_username
  sensitive   = true
}

output "db_password_secret_arn" {
  description = "ARN of Secrets Manager secret containing database password"
  value       = aws_secretsmanager_secret.db_password.arn
}

output "security_group_id" {
  description = "Security group ID for RDS instance"
  value       = aws_security_group.{{ service_name | replace('-', '_') }}_rds.id
}

output "ssm_parameter_endpoint" {
  description = "SSM parameter name for RDS endpoint"
  value       = aws_ssm_parameter.db_endpoint.name
}

output "ssm_parameter_db_name" {
  description = "SSM parameter name for database name"
  value       = aws_ssm_parameter.db_name.name
}

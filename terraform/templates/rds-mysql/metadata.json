{
  "module": "rds-mysql",
  "version": "1.0.0",
  "description": "RDS MySQL 8.0 database with Multi-AZ and automated backups",
  "category": "database",
  "parameters": {
    "required": {
      "db_name": {
        "type": "string",
        "description": "Database name",
        "default": "appdb"
      },
      "db_username": {
        "type": "string",
        "description": "Master username",
        "default": "dbadmin"
      },
      "instance_class": {
        "type": "string",
        "description": "RDS instance class",
        "default": "db.t3.micro"
      },
      "allocated_storage": {
        "type": "number",
        "description": "Allocated storage in GB",
        "default": 20
      }
    }
  },
  "optional_components": {
    "multi_az": {
      "type": "boolean",
      "question": "Multi-AZ 배포를 활성화하시겠습니까? (고가용성)",
      "default": true
    },
    "backup_retention": {
      "type": "number",
      "question": "백업 보존 기간 (일)",
      "default": 7
    },
    "performance_insights": {
      "type": "boolean",
      "question": "Performance Insights를 활성화하시겠습니까?",
      "default": true
    },
    "storage_encrypted": {
      "type": "boolean",
      "question": "스토리지 암호화를 활성화하시겠습니까?",
      "default": true
    }
  }
}

{
  "module": "sqs-queue",
  "version": "1.0.0",
  "description": "SQS queue for asynchronous messaging",
  "category": "messaging",
  "parameters": {
    "required": {
      "message_retention": {
        "type": "number",
        "description": "Message retention period in seconds",
        "default": 345600
      },
      "visibility_timeout": {
        "type": "number",
        "description": "Visibility timeout in seconds",
        "default": 30
      }
    }
  },
  "optional_components": {
    "fifo_queue": {
      "type": "boolean",
      "question": "FIFO 큐로 생성하시겠습니까?",
      "default": false
    },
    "dead_letter_queue": {
      "type": "boolean",
      "question": "Dead Letter Queue를 생성하시겠습니까?",
      "default": true
    },
    "encryption": {
      "type": "boolean",
      "question": "KMS 암호화를 활성화하시겠습니까?",
      "default": true
    }
  }
}

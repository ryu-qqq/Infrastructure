locals {
  name_prefix = "{{ service_name }}-{{ environment }}"

  required_tags = {
    Service     = "{{ service_name }}"
    Environment = "{{ environment }}"
    Owner       = "platform-team"
    CostCenter  = "engineering"
    Lifecycle   = "{{ environment }}"
    DataClass   = "sensitive"
  }

  db_name     = "{{ db_name | default('appdb') }}"
  db_username = "{{ db_username | default('dbadmin') }}"
}

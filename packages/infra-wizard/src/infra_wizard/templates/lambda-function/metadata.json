{
  "module": "lambda-function",
  "version": "1.0.0",
  "description": "AWS Lambda function with API Gateway integration",
  "category": "compute",
  "parameters": {
    "required": {
      "runtime": {
        "type": "string",
        "description": "Lambda runtime (python3.11, nodejs20.x, etc.)",
        "default": "python3.11"
      },
      "memory_size": {
        "type": "number",
        "description": "Memory size in MB",
        "default": 512
      },
      "timeout": {
        "type": "number",
        "description": "Timeout in seconds",
        "default": 30
      }
    }
  },
  "optional_components": {
    "api_gateway": {
      "type": "boolean",
      "question": "API Gateway를 생성하시겠습니까?",
      "default": true
    },
    "eventbridge": {
      "type": "boolean",
      "question": "EventBridge 스케줄을 설정하시겠습니까?",
      "default": false
    },
    "vpc_config": {
      "type": "boolean",
      "question": "VPC 내에서 실행하시겠습니까?",
      "default": false
    },
    "reserved_concurrency": {
      "type": "number",
      "question": "Reserved concurrency (0 = unlimited)",
      "default": 0
    }
  }
}

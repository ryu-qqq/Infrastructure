# KMS key for CloudWatch Logs encryption
data "aws_kms_key" "cloudwatch_logs" {
  key_id = "alias/cloudwatch-logs"
}

{% if vpc_config %}
# VPC data
data "aws_vpc" "main" {
  tags = {
    Name = "main-vpc"
  }
}

# Private subnets for Lambda
data "aws_subnets" "private" {
  filter {
    name   = "vpc-id"
    values = [data.aws_vpc.main.id]
  }

  tags = {
    Tier = "private"
  }
}
{% endif %}

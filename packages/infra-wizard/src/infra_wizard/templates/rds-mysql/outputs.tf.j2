output "db_instance_id" {
  description = "RDS instance ID"
  value       = module.{{ service_name | replace('-', '_') }}_rds.db_instance_id
}

output "db_instance_arn" {
  description = "RDS instance ARN"
  value       = module.{{ service_name | replace('-', '_') }}_rds.db_instance_arn
}

output "db_endpoint" {
  description = "RDS instance endpoint"
  value       = module.{{ service_name | replace('-', '_') }}_rds.endpoint
}

output "db_name" {
  description = "Database name"
  value       = local.db_name
}

output "db_username" {
  description = "Database username"
  value       = local.db_username
  sensitive   = true
}

output "db_port" {
  description = "Database port"
  value       = 3306
}

output "security_group_id" {
  description = "Security group ID for RDS instance"
  value       = aws_security_group.{{ service_name | replace('-', '_') }}_rds.id
}

output "db_subnet_group_name" {
  description = "DB subnet group name"
  value       = aws_db_subnet_group.{{ service_name | replace('-', '_') }}.name
}

output "secret_arn" {
  description = "Secrets Manager ARN for database password"
  value       = aws_secretsmanager_secret.db_password.arn
}
